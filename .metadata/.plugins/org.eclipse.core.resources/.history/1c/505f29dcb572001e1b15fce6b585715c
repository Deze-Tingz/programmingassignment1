		   ItemToPurchase item2 = new ItemToPurchase();
		   
		   
		   
	      Scanner scnr = new Scanner(System.in);
	      
	      //item1.printItem1(scnr.nextLine(), scnr.nextInt(), scnr.nextInt());
	        System.out.println("Item 1");
			System.out.println("Enter the item name: ");
			item1.setName(scnr.nextLine());
			System.out.println("Enter the item price: \n");
			item1.setPrice(scnr.nextInt());
			System.out.println("Enter the item quantity: \n");
			item1.setQuantity(scnr.nextInt());
	      
	     
	   }
